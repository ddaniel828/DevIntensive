<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activities.MainActivity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="72dp"
            android:layout_width="0dp"
            android:background="@color/grey"
            android:text="0\nРейтинг"
            android:layout_weight="0.25"
            android:gravity="center"
            android:textSize="@dimen/size_16"
            android:textColor="@color/white">
        </TextView>

        <TextView
            android:layout_height="72dp"
            android:layout_width="0dp"
            android:background="@color/grey"
            android:text="0\nНаписано строк кода"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textSize="@dimen/size_16"
            android:textColor="@color/white">
        </TextView>
        <TextView
            android:layout_height="72dp"
            android:layout_width="0dp"
            android:background="@color/grey"
            android:text="0\nПроектов"
            android:layout_weight="0.25"
            android:gravity="center"
            android:textSize="@dimen/size_16"
            android:textColor="@color/white">
        </TextView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_call_black_24dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/spacing_32"
            android:layout_marginRight="@dimen/spacing_16"
            android:gravity="bottom">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:hint="Мобильный телефон"
                    android:text="89104329327"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:focusable="false"/>

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_phone_in_talk_black_24dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_72"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_email_black_24dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/spacing_32"
            android:layout_marginRight="@dimen/spacing_16"
            android:gravity="bottom">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/email_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="E-mail"
                    android:text="danilr8@gmail.com"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:focusable="false"/>
                    />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_send_black_24dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_72"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_72"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/vk"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/spacing_32"
            android:layout_marginRight="@dimen/spacing_16"
            android:gravity="bottom">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/VK_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Профиль в VK"
                    android:text="vk.com/id370737513"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:focusable="false"/>
                />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_visibility_black_24dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_72"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_72"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/github_circle"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/spacing_32"
            android:layout_marginRight="@dimen/spacing_16"
            android:gravity="bottom">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/gitrepo_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Репозиторий"
                    android:text="github.com/ddaniel828/DevIntensive"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:focusable="false"/>
                />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_visibility_black_24dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_72"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_account_box_black_24dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_72"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/spacing_32"
            android:layout_marginRight="@dimen/spacing_16"
            android:gravity="bottom">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/about_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="О себе"
                    android:text="Ничего особенного."
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:focusable="false"/>
                />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_visibility_black_24dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/grey_light"
        android:layout_marginLeft="@dimen/spacing_72"/>

</LinearLayout>